{
  "name": "@saaskit/ink-ui",
  "version": "0.1.0",
  "description": "Production-quality terminal UI components for React Ink",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./theme": {
      "import": "./dist/theme/index.js",
      "types": "./dist/theme/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "react",
    "ink",
    "terminal",
    "cli",
    "ui",
    "components",
    "design-system",
    "tui",
    "saas"
  ],
  "author": "SaaSKit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saaskit/saaskit.git",
    "directory": "packages/ink-ui"
  },
  "peerDependencies": {
    "ink": "^4.0.0 || ^5.0.0",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "ink": "^5.0.1",
    "react": "^18.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
