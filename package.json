{
	"name": "saaskit",
	"version": "0.1.0",
	"private": true,
	"description": "Headless SaaS for AI Agents",
	"type": "module",
	"workspaces": ["packages/*"],
	"scripts": {
		"dev": "bun run src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target node",
		"build:packages": "bun run --filter './packages/*' build",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"clean": "rm -rf dist coverage && bun run --filter './packages/*' clean"
	},
	"dependencies": {
		"ink": "^5.0.1",
		"react": "^18.3.1",
		"yoga-wasm-web": "^0.3.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "^1.1.14",
		"@types/react": "^18.3.12",
		"bun-types": "1.3.5",
		"typescript": "^5.7.2"
	},
	"engines": {
		"bun": ">=1.2.0"
	},
	"keywords": ["saas", "cli", "terminal", "react", "ink", "ai", "agent", "mcp"],
	"author": "SaaS Studio",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/saas-studio/saaskit.git"
	}
}
